{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/",
      "destination": "/sales.html",
      "permanent": false
    },
    {
      "source": "/index.html",
      "destination": "/sales.html",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://saas-ofm-backend.onrender.com/api/:path*"
    },
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/shop",
      "destination": "/shop.html"
    },
    {
      "source": "/access",
      "destination": "/access.html"
    },
    {
      "source": "/success",
      "destination": "/success.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
